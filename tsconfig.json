{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/main.ts", "@types/*", "src/config/*"],
  "exclude": ["tests/integration/test-project/*"]
}
